.container
  %header
    %h1 Citrulu
    %p.lead Super-Awesome Front End Web Testing Framework

  %section#brochure
  %h2 Features
  %table.table-striped.span12
    %thead
      %tr
        %td.span5
        %td.span2 Cornichon
        %td.span2 Gherkin
        %td.span2 Cucumber
        %td.span1

    %tbody
      - @limits.each do |limit|
        %tr
          %td.feature
            %p=limit[:name]
            %small=limit[:description]
          %td.bronze=limit[:bronze]
          %td.silver=limit[:silver]
          %td.gold=limit[:gold]
          %td

      - @features.each do |feature|
        %tr
          %td.feature
            %p=feature[:name]
            %small=feature[:description]
          %td.bronze
            %i{:class => feature[:bronze] ? 'icon-ok' : 'icon-remove'}
          %td.silver
            %i{:class => feature[:silver] ? 'icon-ok' : 'icon-remove'}
          %td.gold
            %i{:class => feature[:gold] ? 'icon-ok' : 'icon-remove'}
          %td.comingsoon
            - if feature[:comingsoon]
              %p Coming soon!
