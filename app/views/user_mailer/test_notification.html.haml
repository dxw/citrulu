- content_for :content do
  - if @status == :pass
    %p Your failing tests are now passing. Everything's looking good! 
    %p
      If you'd like, you can 
      =link_to("review recent test results", test_runs_url) + "."
  - elsif @status == :fail

    %p 
      To view your full test results, visit
      =link_to("your test results page", test_run_url(@test_run)) + "."
      
    %p= "Failed tests (#{@failures}):"

    %div{:style => "padding-bottom: 15px;"}
      - @test_run.test_groups.each do |group|
        %p= "On #{group.test_url}"
        %ul
          - group.test_results.each do |result|
            - next if !result.failed?
            %li
              = "#{result.assertion} " 
              != value_or_name(result)
              
