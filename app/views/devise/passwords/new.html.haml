= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  %legend
    %h2 Forgot your password?
  %div
    = f.email_field :email, :placeholder => "Enter your email address"
  %div= f.submit "Send me reset password instructions", :class => "btn btn-primary"
%ul.unstyled.devise_links
  %li=link_to "Sign in", new_session_path(resource_name)
  %li= link_to "Sign up", new_registration_path(resource_name)
