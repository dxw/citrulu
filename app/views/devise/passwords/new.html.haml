= content_for :title, "Citrulu for website monitoring - forgot your password?"
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :id => "new_password", :class => "form-horizontal" }) do |f|
  .form-inner
    %fieldset
      %legend
        =image_tag('signup-citrulu-bot.png')
        %h2 Forgot your password?
        %p We'll email you reset instructions
        
      .controls-row
        = f.email_field :email, :placeholder => "Enter your email address", :class => "full_width"
        
  = button_tag(:type => 'submit', :class => 'btn btn-signup') do
    = content_tag(:span, 'Reset')
    
%ul.unstyled.devise_links
  %li=link_to "Sign in", new_session_path(resource_name)
  %li= link_to "Sign up", new_registration_path(resource_name)
