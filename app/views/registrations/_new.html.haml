= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "signup"}) do |f|
  %fieldset
    %legend
      %h3 Sign up
    = f.email_field :email, :placeholder => "Email"
    %div  
      = f.password_field :password, :placeholder => "Password"
      = f.password_field :password_confirmation, :placeholder => "Confirm Password"
   
    = f.submit "Sign in", :class => "btn btn-primary"
    %p#terms By registering for this service, you confirm that you agree to our #{link_to("Terms & Conditions", :action => "terms", :controller => "website")}.
    %ul.unstyled.devise_links
      %li= link_to "Sign in", new_session_path(resource_name)
      %li= link_to "Forgot your password?", new_password_path(resource_name)
      %li.last= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
    
