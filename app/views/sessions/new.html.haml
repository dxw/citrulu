= content_for :title, "Sign in to Citrulu to test your live websites"

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :id => "signin", :class => "form-horizontal" }) do |f|
  .form-inner
    %fieldset
      %legend
        =image_tag('signup-citrulu-bot.png')
        %h2 Sign in
      .controls-row
        = f.email_field :email, :placeholder => "Email", :class => "full_width"
      .controls-row
        = f.password_field :password, :placeholder => "Password", :class => "full_width"
        - if devise_mapping.rememberable?
          %label.checkbox.inline{ :for => "user_remember_me" }      
            = f.check_box :remember_me
            Remember me

  = button_tag(:type => 'submit', :class => 'btn btn-signup') do
    = content_tag(:span, 'Sign in', :class => 'pencil-icon')
    
%ul.unstyled.devise_links
  %li= link_to "Sign up", new_registration_path(resource_name)
  %li= link_to "Forgot your password?", new_password_path(resource_name)
  %li.last= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
