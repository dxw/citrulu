= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "signin"}) do |f|
  %legend
    %h3 Sign in
    
  = f.email_field :email, :placeholder => "Email"
  = f.password_field :password, :placeholder => "Password"
  - if devise_mapping.rememberable?
    %label.checkbox.inline{ :for => "user_remember_me" }      
      = f.check_box :remember_me
      Remember me
  = f.submit "Sign in", :class => "btn btn-primary"
%ul.unstyled.devise_links
  %li= link_to "Sign up", new_registration_path(resource_name)
  %li= link_to "Forgot your password?", new_password_path(resource_name)
  %li.last= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
